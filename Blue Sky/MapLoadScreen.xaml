<Window x:Class="Blue_Sky.MapLoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blue_Sky"
        mc:Ignorable="d"
        Title="Loading..." Height="62" Width="400" ResizeMode="NoResize" ShowInTaskbar="False" BorderBrush="DarkGray" BorderThickness="1" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin="4">
        <Label x:Name="lblLoading"/>
        <ProgressBar VerticalAlignment="Bottom" Margin="4" Height="24" x:Name="pbrLoading" x:FieldModifier="public"/>
    </Grid>
</Window>
